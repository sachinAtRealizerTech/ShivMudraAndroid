<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:background="@drawable/shadoweffect"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_vegieImage"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            android:src="@drawable/image1"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:paddingBottom="7dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_vegiename"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Carrot"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtotalprice"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_vegdesc"
                android:textSize="14sp"
                android:text="Carrot Description"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDefaultVal"
                android:textSize="14sp"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:text="Our Price"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:text="\@Mall"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="\@Market"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_ourprice"
                    android:text="20/kg"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_mallprice"
                    android:text="30/kg"
                    android:textColor="@color/darkgrey"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_marketprice"
                    android:text="25/kg"
                    android:textColor="@color/dot_dark_screen1"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:id="@+id/layout_plusminus"
                    android:background="@drawable/square_background">
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="#00ffffff"
                        android:text="-"
                        android:id="@+id/btn_minus"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="23sp"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"
                        android:text="0"
                        android:id="@+id/txt_value"
                        android:gravity="center"
                        android:textSize="12sp"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:background="#00ffffff"
                        android:text="+"
                        android:gravity="center"
                        android:id="@+id/btn_plus"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:background="@drawable/edittextsquare">
                    <Spinner
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:id="@+id/spinnerunit"/>

                </LinearLayout>
                <TextView
                    android:layout_width="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtunitType"
                    android:text="kg"
                    android:textAllCaps="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/darkgrey"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>